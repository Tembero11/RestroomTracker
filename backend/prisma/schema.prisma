generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Sex {
  WOMEN
  MEN
  BOTH
}

enum OAuthService {
  GOOGLE
  DISCORD
}

model User {
  id BigInt @id
  services UserService[]
  username String
  email String @unique
  isComplete Boolean @default(false)
  lastLogin DateTime @default(now())
}

model UserService {
  id BigInt @id
  service OAuthService
  refreshToken String
  user User @relation(fields: [id], references: [id])
}

model Restroom {
  id         BigInt @id
  name       String
  fee        Decimal?
  sex        Sex
  accessible Boolean?
  code       String?
  notes      String

  lat       Decimal
  lng       Decimal
  @@map("restrooms")
}

